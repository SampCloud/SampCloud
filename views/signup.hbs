{{!-- BODY BEGINS // Body tag included to add orange top border via CSS box-shadow property --}}
<body class="orange-border">

    {{!-- SIGN UP PAGE CONTAINER BEGINS // We reuse the login CSS for this --}}
    <div class="login">

        {{!-- SIGN UP BEGINS // We reuse the login CSS for this --}}
        <div class="container">
            <div class="content">

                {{!-- FORM BEGINS --}}
                <form action="/signup" method="POST">
                    <label for="username"></label>
                    <input type="text" id="username" name="username" placeholder="username" autocomplete="off">
                    <label for="password"></label>
                    <input type="password" id="password" name="password" placeholder="password" autocomplete="off">
                    <label for="email"></label>
                    <input type="text" id="email" name="email" placeholder="email" autocomplete="off">
                    
                    {{!-- RADIO BUTTONS BEGIN --}}
                    <div class="login-radio">
                        <span class="button">
                            <input type="radio" id="singer" value="singer" name="role">
                            <label for="singer" class="radio-label">Sample artist</label>
                        </span>

                        <span class="button">
                            <input type="radio" type="radio" id="producer" value="producer" name="role">
                            <label for="producer" class="radio-label">Producer</label>
                        </span>
                    </div>
                    {{!-- END OF RADIO BUTTONS --}}

                    <button class="primary-button">Create account</button><br>
                    
                </form>
                {{!-- END OF FORM --}}

                {{!-- * Invalid Credentials Message * --}}
                    {{#if message}}
                      <p style="color: red; position: absolute; bottom: 33%; left: 50%; transform: translate(-50%, 0%);">{{message}}</p>
                    {{/if}}

                {{!-- * Redirect to Login * --}}
                <p style="position: absolute; bottom: 30%; left: 50%; transform: translate(-50%, 0%);">Already have an account?<a href="/login"> Sign in.</a></p>

            </div>
        </div>
        {{!-- END OF SIGN UP --}}

        {{!-- * Remaining Content * --}}
        <p>Get the app.</p>
        <div class="app-container">
            <a href="https://apps.apple.com/us/app/soundcloud-music-audio/id336353151" alt="SoundCloud on Apple App Store"><img src="/images/apple-app-store.png"></a>
            <a href="https://play.google.com/store/apps/details?id=com.soundcloud.android&hl=en_AU&gl=US" alt="SoundCloud on Google Play"><img src="/images/google-play-store.png"></a>
        </div>
        <div class="copyright">Copyright Â© 2021 SampCloud in Partnership with <a href="https://www.ironhack.com/en/berlin" alt="Offical Ironhack Website">Ironhack Berlin</a></div>
        <button style="margin: 0; position: absolute; top: 10px; right: 10px;" id="toggle-theme" class="toggle-theme"><i class="fas fa-adjust" style="border: none;"></i></button>
        {{!-- * End of Remaining Content --}}
    
    </div>
    {{!-- END OF SIGN UP PAGE CONTAINER --}}

</body>
{{!-- END OF BODY --}}
