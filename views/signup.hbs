{{!-- BODY BEGINS // Body tag included to add orange top border via CSS box-shadow property --}}
<body class="orange-border">

    {{!-- LOGIN PAGE CONTAINER BEGINS --}}
    <div class="login">

        {{!-- LOGIN BEGINS // We reuse the login CSS for this --}}
        <div class="container">
            <div class="content">
                {{!-- FORM BEGINS --}}
                <form action="/signup" method="POST">
                    <label for="username"></label>
                    <input type="text" id="username" name="username" placeholder="username" autocomplete="off">
                    <label for="password"></label>
                    <input type="password" id="password" name="password" placeholder="password" autocomplete="off">
                    <label for="email"></label>
                    <input type="text" id="email" name="email" placeholder="email" autocomplete="off">
                    
                    {{!-- RADIO BUTTONS BEGIN --}}
                    <div class="login-radio">
                        <span class="button">
                            <input type="radio" id="singer" value="singer" name="role">
                            <label for="singer" class="radio-label">Sample artist</label>
                        </span>

                        <span class="button">
                            <input type="radio" type="radio" id="producer" value="producer" name="role">
                            <label for="producer" class="radio-label">Producer</label>
                        </span>
                    </div>
                    {{!-- END RADIO BUTTONS --}}

                    <button class="primary-button">Create account</button><br>
                    
                    {{#if message}}
                        <div class="invalid-input">{{message}}</div>
                    {{/if}}
                </form>
                {{!-- END OF FORM --}}

            </div>
        </div>
        {{!-- END OF LOGIN --}}

        {{!-- * Remaining Page Content * --}}
        <p>Get the app.</p>
        <div class="app-container">
            <a href="#"><img src="/images/apple-app-store.png"></a>
            <a href="#"><img src="/images/google-play-store.png"></a>
        </div>
        <div class="copyright">Copyright Â© 2021 SampCloud in Partnership with Ironhack Berlin</div>
        <button style="margin: 0; position: absolute; top: 10px; right: 10px;" id="toggle-theme" class="toggle-theme"><i class="fas fa-adjust"></i></button>
    </div>
    {{!-- END OF LOGIN PAGE CONTAINER --}}

</body>
{{!-- END OF BODY --}}
