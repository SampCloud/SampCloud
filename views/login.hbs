{{!-- BODY BEGINS // Body tag included to add orange top border via CSS box-shadow property --}}
<body class="orange-border">

    {{!-- LOGIN PAGE CONTAINER BEGINS --}}
    <div class="login">

        {{!-- LOGIN BEGINS --}}
        <div class="container">
            <div class="content">

                {{!-- FORM BEGINS --}}
                <form action="/login" method="POST">
                    <label for="username"></label>
                    <input type="text" id="username" name="username" placeholder="username" autocomplete="off">
                    <label for="password"></label>
                    <input type="password" id="password" name="password" placeholder="password">
                    <button type="submit" class="secondary-button" style="background-color: #9c9997; color: #FFFFFF; margin-top: 20px">Login</button>
                </form>
                {{!-- END OF FORM --}}

                {{!-- * For Invalid Credentials * --}}
                {{#if message}}
                    <p style="color: red; position: absolute; bottom: 40%; left: 50%; transform: translate(-50%, 0%);">{{message}}</p>
                {{/if}}

                {{!-- * Redirect to Sign Up --}}
                <div><p style="position: absolute; bottom: 30%; left: 50%; transform: translate(-50%, 0%);">New here?<a href="/signup"> Create an account.</a></p></div>

            </div>
        </div>
        {{!-- END OF LOGIN --}}

        {{!-- * Remaining Content * --}}
        <p>Get the app.</p>
        <div class="app-container">
            <a href="#"><img src="/images/apple-app-store.png"></a>
            <a href="#"><img src="/images/google-play-store.png"></a>
        </div>
        <div class="copyright">Copyright Â© 2021 SampCloud in Partnership with Ironhack Berlin</div>
        <button style="margin: 0; position: absolute; top: 10px; right: 10px;" id="toggle-theme" class="toggle-theme"><i class="fas fa-adjust"></i></button>
        {{!-- * End of Remaining Content * --}}
    
    </div>
    {{!-- END OF LOGIN PAGE CONTAINER --}}

</body>
{{!-- END OF BODY --}}
