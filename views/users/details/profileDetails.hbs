{{!-- NAV BEGINS --}}
<nav>
    <div class="nav-content">

        <div class="nav-logo"><a href="/search"><img src="/images/orange-logo.png" style="height: 100%"></a></div>

        <div class="nav-search">
            <form action="/search" method="POST">
                <div class="wrapper">
                    <input type="text" id="search" name="q" autocomplete="off">
                    <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </div>
            </form>
        </div>

        <div class="nav-links">
            {{#with currentUser}}
            <a href="/{{role}}Profile">
                {{#if imgPath}}
                <img src="{{imgPath}}">
                {{else}}
                <img src="/images/default-user-photo.png">
                {{!-- <button>Profile</button> --}}
                {{/if}}
            </a>
            {{/with}}
            <a href="/logout"><button>Log Out</button></a>
            <button id="toggle-theme" class="toggle-theme-1"><i class="fas fa-adjust"></i></button>
        </div>

    </div>
</nav>
{{!-- END OF NAV --}}

<div class="main-block">
    {{!-- HEADER BEGINS --}}
    {{#with profileDetails}}
    <div class="header">
        ​
        <div class="header-photo-area">
            {{#if imgPath}}
            <img src="{{imgPath}}"
                style="margin-top: 44px; margin-bottom: 22px; padding: 0; width: 200px; height: 200px; border-radius: 50%;">
            {{else}}
            <div class="header-photo-circle"></div>
            {{/if}}
        </div>
        ​
        <div class="header-labels">
            {{#if artisticName}}
            <div class="h1-profile">{{artisticName}}</div>
            {{else}}
            <div class="h1-profile">{{username}}</div>
            {{/if}}

            <div class="h2-profile">Location</div>
        </div>
        ​
    </div>
    {{/with}}
    {{!-- END OF HEADER --}}

    {{!-- PROFILE CONTENT BEGINS --}}
    <div class="profile-content">

        {{!-- PROFILE NAV BEGINS --}}
        <div class="profile-nav">
            <div class="profile-nav-links">
                <ul>
                    <li><a href="#">All</a></li>
                    <li><a href="#">Popular tracks</a></li>
                    <li><a href="#">Tracks</a></li>
                    <li><a href="#">Album</a></li>
                    <li><a href="#">Playlists</a></li>
                    <li><a href="#">Reposts</a></li>
                    <li><a href="#" class="current">Samples</a></li>
                </ul>
            </div>

            {{!-- EDIT PROFILE MODAL BEGINS --}}
            {{#with profileDetails}}
            <button class="button" data-modal="editProfile">Edit</button>
            <div id="editProfile" class="modal-bg">
                <div class="modal-contents">

                    <form action="/singerProfile/edit" method="POST" enctype="multipart/form-data">
                        <div class="edit-your-profile">
                            <div class="title">Edit your Profile</div>
                            <div class="close">&times;</div>
                        </div>

                        <div class="edit-profile-contents">
                            <div class="wrapper">

                                <div class="photo">
                                    {{#if imgPath}}
                                    <img src="{{imgPath}}"
                                        style="margin: 20px 0; padding: 0; width: 200px; height: 200px; border-radius: 50%;">
                                    {{else}}
                                    <div class="edit-profile-photo"></div>
                                    {{/if}}
                                    <label for="avatar"></label>
                                    <input type="file" name="avatar" id="avatar" value="{{imgName}}">
                                </div>

                                <div class="user-info">
                                    <label for="artisticName">Display Name:</label>
                                    <input type="text" name="artisticName" id="artisticName" value="{{artisticName}}">

                                    <label for="description">Description:</label>
                                    <input type="text" name="description" id="description" value="{{description}}">

                                    <label for="soundUrl">SoundCloud:</label>
                                    <input type="text" name="soundUrl" id="soundUrl" value="{{soundUrl}}">
                                </div>
                            </div>
                        </div>

                        <div class="save-profile"><button type="submit">Save</button></div>
                    </form>

                </div>
            </div>
            {{/with}}
            {{!-- END OF EDIT PROFILE MODAL --}}

        </div>
        {{!-- END OF PROFILE NAV --}}

        {{!-- PROFILE BODY BEGINS --}}
        <div class="profile-body">

            {{!-- PROFILE MEDIA BEGINS --}}
            <div class="profile-media">

                {{!-- IF TRACKS HAVE BEEN UPLOADED, DISPLAY, OTHERWISE SHOW NO TRACKS MESSAGE --}}

                {{#if trackDetails}}
                <div class="my-samples">
                    <span>My Samples</span>
                </div>

                {{!-- LIST OF CURRENT UPLOADS --}}
                <div class="profile-samples">
                    {{#each trackDetails}}

                    {{!-- TRACK BEGINS --}}
                    <div class="track">
                        <a href="/trackDetails/{{_id}}"><img src="{{imgPath}}" alt=""></a>

                        <div class="info">

                            <div class="sample-description">
                                <p>{{title}}</p>
                                <p>{{description}}</p>
                            </div>

                            <div class="audio-container">
                                <figure>
                                    <audio controls src="{{filePath}}">
                                        Your browser does not support the
                                        <code>audio</code> element.
                                </figure>
                            </div>
                        </div>
                    </div>
                    {{!-- END OF TRACK --}}
                    {{/each}}

                </div>
                {{else}}

                {{!-- IF NO TRACKS HAVE BEEN UPLOADED, SUGGEST UPLOAD --}}
                <div class="empty-profile">
                    <h1 style="font-size: 24px;">Nothing to hear here...</h1>
                    <h2 style="font-size: 15px;">Check back later for uploaded samples</h2>
                </div>

                <div id="uploadSample" class="modal-bg">
                    <div class="modal-contents">
                        <form action="/singerProfile/addTrack" method="POST" enctype="multipart/form-data">

                            <div class="edit-your-profile">
                                <div class="title">Upload a Sample</div>
                                <div class="close">&times;</div>
                            </div>

                            <label for="title">Title:</label>
                            <input type="text" name="title">

                            <label for="genre">Genre:</label>
                            <input type="text" name="genre">

                            <label for="description">Description:</label>
                            <input type="text" name="description">

                            <label for="audio">File:</label>
                            <input type="file" name="audio" id="audio">

                            <button type="submit">Upload</button>
                        </form>
                    </div>
                </div>
                {{/if}}

            </div>
            {{!-- END OF PROFILE MEDIA --}}

            {{!-- SIDE FOOTER BEGINS --}}
            <div class="footer">
                {{#with profileDetails}}
                <div class="profile-bio">

                    {{#if description}}
                    <p>{{description}}</p>
                    {{else}}
                    <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Facilis ut praesentium
                        accusantium necessitatibus voluptate libero, sit deserunt nisi ipsa enim adipisci
                        architecto aliquam inpossimus consectetur!</p>
                    {{/if}}

                    <a href="mailto:{{email}}" style="color: var(--p1-color); font-size: 20px;"><i
                            class="far fa-envelope"></i></a>

                </div>
                {{/with}}
                <div class="footer-links">
                    <a href="#">Legal - </a>
                    <a href="#">Privacy - </a>
                    <a href="#">Cookie Policy - </a>
                    <a href="#">Cookie Manager - </a>
                    <a href="#">Imprint - </a>
                    <a href="#">Creator Resources - </a>
                    <a href="#">Blog - </a>
                    <a href="#">Charts - </a>
                    <a href="#">Popular searches </a>
                </div>
                <div class="footer-language">
                    Language: English
                </div>

            </div>
            {{!-- END OF SIDE FOOTER --}}

        </div>
        ​{{!-- END OF PROFILE BODY --}}

    </div>
    {{!-- END OF PROFILE CONTENT --}}
</div>


