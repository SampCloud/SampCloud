{{!-- MAIN BLOCK BEGINS --}}
<div class="main-block">
  <div class="search-spacer"></div>

    <div class="edit-sample-title">Edit Sample</div>
    
    {{#with trackDetails}}
    <form action="/editSample/{{_id}}" method="POST" enctype="multipart/form-data">

      <div class="edit-sample">

        <div class="edit-sample-cover">
          <img src="{{imgPath}}">
          <label for="cover"></label>
          <input type="file" name="cover" id="cover">
        </div>

        <div class="edit-sample-info">
          <label for="artisticName">Title:</label>
          <input type="text" name="title" id="title" value="{{title}}">

          <label for="description">Description</label>
          <input type="text" name="description" id="description" value="{{description}}" style="min-height: 150px;">

          <button type="submit">Save</button>
        </div>
      </div>

    </form>
    {{/with}}

   <button style="margin: 0; position: absolute; top: 10px; right: 10px;" id="toggle-theme">Toggle Theme</button>
</div>
{{!-- END OF MAIN BLOCK --}}