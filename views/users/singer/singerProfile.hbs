
{{#with singerDetails}}
{{!-- NAV BEGINS --}}
<nav>
  <div class="nav-content">
    <a href="/browse"><img src="/images/orange-logo.png" style="height: 100%"></a>
  </div>
</nav>
{{!-- END OF NAV --}}

<div class="main-block">
    {{!-- HEADER BEGINS --}}
    <div class="header">

        <div class="header-photo-area">
        {{#if imgPath}}
            <img src="{{imgPath}}" style="margin-top: 44px; padding: 0; width: 200px; height: 200px; border-radius: 50%;">
        {{else}}
            <div class="header-photo-circle"></div>
        {{/if}}
        </div>

        <div class="header-labels">
        {{#if artisticName}}
            <div class="h1-profile">{{artisticName}}</div>
        {{else}}
            <div class="h1-profile">{{username}}</div>
        {{/if}}
        
        <div class="h2-profile">Location</div>
        </div>

    </div>
    {{!-- END OF HEADER --}}

    {{!-- MAIN PROFILE BLOCK BEGINS --}}
    <div class="main-profile-block">

        {{!-- PROFILE CONTENT BEGINS --}}
        <div class="profile-content">

            {{!-- PROFILE NAV BEGINS --}}
            <div class="profile-nav">
                <div class="profile-nav-links">
                    <ul>
                        <li><a href="#">All</a></li>
                        <li><a href="#">Popular tracks</a></li>
                        <li><a href="#">Tracks</a></li>
                        <li><a href="#">Album</a></li>
                        <li><a href="#">Playlists</a></li>
                        <li><a href="#">Reposts</a></li>
                        <li><a href="#">Samples</a></li>
                    </ul>
                </div>
                <button id="button" class="button">Edit</button>

                {{!-- EDIT PROFILE MODAL BEGINS --}}
                <div class="bg-modal">
                    <div class="modal-contents">
                        
                        <form action="/singerProfile/edit"  method="POST" enctype="multipart/form-data">
                            
                            <div class="edit-your-profile">
                                <div class="title">Edit your Profile</div>
                                <div class="close">&times;</div>
                            </div>

                            <div class="edit-profile-contents">
                                <div class="wrapper">
                                    <label for="avatar">Upload Profile Picture:</label>
                                    <input type="file" name="avatar" id="avatar" value="{{imgName}}">
                                

                                    <div class="user-info">
                                        <label for="artisticName">Display Name:</label>
                                        <input type="text" name="artisticName" id="artisticName" value="{{artisticName}}">

                                        <label for="description">Description:</label>
                                        <input type="text" name="description" id="description" value="{{description}}">
                                        
                                        <label for="soundUrl">SoundCloud:</label>
                                        <input type="text" name="soundUrl" id="soundUrl" value="{{soundUrl}}">
                                    </div>
                                </div>
                            </div>


                            <button class="primary-button-wide" type="submit">Edit</button>
                        </form> 
                    </div>
                </div>
                {{!-- END OF EDIT PROFILE MODAL --}}

            </div>
            {{!-- END OF PROFILE NAV --}}

            {{!-- PROFILE BODY BEGINS --}}
            <div class="profile-body">
                {{!-- PROFILE MEDIA BEGINS --}}
                <div class="profile-media">
                    {{#each tracks}}
                    <div>
                        <h3>{{title}}</h3>
                            <p>{{description}}</p>
                            <figure>
                            <audio controls src="{{file}}">
                                Your browser does not support the
                                <code>audio</code> element.
                            </audio>
                            </figure>
                    </div>
                    {{/each}}
                </div>
                {{!-- END OF PROFILE MEDIA --}}

                {{!-- SIDE FOOTER BEGINS --}}
                <div class="footer" style="padding-top: 20px">
                    {{!-- <div class="search-spacer"></div> <!--fix to align with nav--> --}}
                    {{!-- <div class="footer-app-container"></div> <!-- Create new divider for this purpose--> --}}
                    <div class="footer-links">
                        <a href="#">Legal - </a>
                        <a href="#">Privacy - </a>
                        <a href="#">Cookie Policy - </a>
                        <a href="#">Cookie Manager - </a>
                        <a href="#">Imprint - </a>
                        <a href="#">Creator Resources - </a>
                        <a href="#">Blog - </a>
                        <a href="#">Charts - </a>
                        <a href="#">Popular searches </a>
                    </div>
                    <div class="footer-language">
                        Language: English
                    </div>
                </div>
                {{!-- END OF SIDE FOOTER --}}

            </div>
            {{!-- END OF PROFILE BODY --}}

        </div>
        {{!-- END OF PROFILE CONTENT --}}

    </div>
    {{!-- END OF MAIN PROFILE BLOCK --}}

    <button style="margin: 0; position: absolute; top: 10px; right: 10px;" id="toggle-theme">Toggle Theme</button>

</div>

{{!-- END OF OVERLAY --}}
{{/with}}


